<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Device Tag List View -->
    <record id="ha_device_tag_view_list" model="ir.ui.view">
        <field name="name">ha.device.tag.list</field>
        <field name="model">ha.device.tag</field>
        <field name="arch" type="xml">
            <list string="Device Tags" editable="bottom">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="ha_instance_id"/>
                <field name="color" widget="color_picker"/>
                <field name="description"/>
                <field name="device_count"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Device Tag Form View -->
    <record id="ha_device_tag_view_form" model="ir.ui.view">
        <field name="name">ha.device.tag.form</field>
        <field name="model">ha.device.tag</field>
        <field name="arch" type="xml">
            <form string="Device Tag">
                <header>
                    <button name="action_view_devices"
                            type="object"
                            string="View Devices"
                            class="btn-primary"
                            invisible="device_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_devices"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-tags"
                                invisible="device_count == 0">
                            <field name="device_count" widget="statinfo" string="Devices"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" string="Tag Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Important, Monitoring"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="ha_instance_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Optional description for this tag"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Devices" name="devices">
                            <field name="device_ids" widget="many2many"
                                   domain="[('ha_instance_id', '=', ha_instance_id)]">
                                <list string="Devices">
                                    <field name="name"/>
                                    <field name="custom_name"/>
                                    <field name="manufacturer"/>
                                    <field name="model"/>
                                    <field name="area_id"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Device Tag Kanban View -->
    <record id="ha_device_tag_view_kanban" model="ir.ui.view">
        <field name="name">ha.device.tag.kanban</field>
        <field name="model">ha.device.tag</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name"/>
                <field name="color"/>
                <field name="device_count"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_global_click">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <span t-att-style="'color: ' + kanban_color(record.color.raw_value)">‚óè</span>
                                        <field name="name"/>
                                    </strong>
                                </div>
                                <span class="badge text-bg-secondary">
                                    <field name="device_count"/> Devices
                                </span>
                            </div>
                            <div class="o_kanban_record_bottom">
                                <div class="oe_kanban_bottom_left">
                                    <field name="description"/>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Device Tag Search View -->
    <record id="ha_device_tag_view_search" model="ir.ui.view">
        <field name="name">ha.device.tag.search</field>
        <field name="model">ha.device.tag</field>
        <field name="arch" type="xml">
            <search string="Device Tag Search">
                <field name="name"/>
                <field name="description"/>
                <field name="ha_instance_id"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <separator/>
                <filter name="current_instance" string="Current Instance"
                        domain="[('is_current_user_instance', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_instance" string="HA Instance" context="{'group_by': 'ha_instance_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Device Tag Action -->
    <record id="ha_device_tag_action" model="ir.actions.act_window">
        <field name="name">Device Tags</field>
        <field name="res_model">ha.device.tag</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Device Tag
            </p>
            <p>
                Tags help you categorize and organize your devices for better management.
            </p>
        </field>
    </record>

    <!-- Device Tag - View Devices Action -->
    <record id="ha_device_tag_view_devices_action" model="ir.actions.act_window">
        <field name="name">Tag Devices</field>
        <field name="res_model">ha.device</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>
