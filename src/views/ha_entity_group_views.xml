<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Entity Group List View -->
    <record id="ha_entity_group_view_list" model="ir.ui.view">
        <field name="name">ha.entity.group.list</field>
        <field name="model">ha.entity.group</field>
        <field name="arch" type="xml">
            <list string="Entity Groups">
                <field name="sequence" widget="handle"/>
                <field name="name"/>
                <field name="ha_instance_id"/>
                <field name="color" widget="color_picker"/>
                <field name="description"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="user_ids" widget="many2many_tags" string="Authorized Users"/>
                <field name="entity_count"/>
                <field name="properties"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Entity Group Form View -->
    <record id="ha_entity_group_view_form" model="ir.ui.view">
        <field name="name">ha.entity.group.form</field>
        <field name="model">ha.entity.group</field>
        <field name="arch" type="xml">
            <form string="Entity Group">
                <header>
                    <button name="action_share" type="object" string="Share with Users"
                            class="btn-secondary"
                            groups="odoo_ha_addon.group_ha_manager"
                            title="Share this group with specific users"/>
                    <button name="action_view_entities"
                            type="object"
                            string="View Entities"
                            class="btn-primary"
                            invisible="entity_count == 0"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_entities"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-cube"
                                invisible="entity_count == 0">
                            <field name="entity_count" widget="statinfo" string="Entities"/>
                        </button>
                        <button name="action_view_tags"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-tags"
                                invisible="tag_count == 0">
                            <field name="tag_count" widget="statinfo" string="Tags"/>
                        </button>
                    </div>
                    <widget name="web_ribbon" title="Archived" bg_color="text-bg-danger" invisible="active"/>
                    <div class="oe_title">
                        <label for="name" string="Group Name"/>
                        <h1>
                            <field name="name" placeholder="e.g., Living Room Sensors"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name="ha_instance_id" options="{'no_create': True, 'no_open': True}"/>
                            <field name="sequence"/>
                            <field name="color" widget="color_picker"/>
                            <field name="active" invisible="1"/>
                        </group>
                        <group>
                            <field name="description" placeholder="Optional description for this group"/>
                        </group>
                    </group>
                    <group string="Tags">
                        <field name="tag_ids" widget="many2many_tags"
                               domain="[('ha_instance_id', '=', ha_instance_id)]"
                               options="{'color_field': 'color', 'no_create': False}"/>
                    </group>
                    <group string="Note">
                        <field name="note" nolabel="1" placeholder="Add internal notes here..."/>
                    </group>
                    <group string="Custom Properties">
                        <field name="properties" columns="2"/>
                    </group>
                    <notebook>
                        <page string="Entities" name="entities">
                            <field name="entity_ids" widget="many2many"
                                   domain="[('ha_instance_id', '=', ha_instance_id)]"
                                   options="{'no_create': True}">
                                <list string="Entities">
                                    <field name="entity_id"/>
                                    <field name="name"/>
                                    <field name="domain"/>
                                    <field name="entity_state" string="State"/>
                                    <field name="last_changed"/>
                                </list>
                            </field>
                        </page>
                        <page string="Authorized Users" name="authorized_users">
                            <field name="user_ids" widget="many2many_tags" placeholder="Click to add authorized users" options="{'no_create': True}">
                                <list string="Authorized Users">
                                    <field name="name"/>
                                    <field name="login"/>
                                    <field name="email"/>
                                    <field name="active"/>
                                </list>
                            </field>
                            <div class="alert alert-info mt-3" role="status">
                                <i class="fa fa-info-circle me-2" title="Info"/>
                                <strong>Permission Notes:</strong>
                                <ul class="mb-0 mt-2">
                                    <li>Authorized users can view all entities and data in this group</li>
                                    <li>If no users are specified, all users with instance access can view this group</li>
                                    <li>HA Managers can always view and manage all groups</li>
                                </ul>
                            </div>
                        </page>
                        <page string="Sharing" name="sharing" groups="odoo_ha_addon.group_ha_manager">
                            <field name="share_ids">
                                <list string="Shares" editable="bottom" create="false">
                                    <field name="user_id" readonly="1"/>
                                    <field name="permission"/>
                                    <field name="expiry_date"/>
                                    <field name="is_expired" widget="boolean"/>
                                    <button name="action_extend_expiry" type="object"
                                            string="Extend 30 days" icon="fa-calendar-plus-o"
                                            title="Extend expiry date by 30 days"
                                            invisible="not expiry_date"/>
                                    <button name="unlink" type="object"
                                            string="Revoke" icon="fa-trash"
                                            title="Remove this share"
                                            confirm="Are you sure you want to revoke this share?"/>
                                </list>
                            </field>
                            <div class="alert alert-info mt-3" role="status"
                                 invisible="share_ids">
                                <i class="fa fa-info-circle me-2" title="Info"/>
                                This group has not been shared with any users yet.
                                Click "Share with Users" to share it.
                            </div>
                        </page>
                    </notebook>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Entity Group Search View -->
    <record id="ha_entity_group_view_search" model="ir.ui.view">
        <field name="name">ha.entity.group.search</field>
        <field name="model">ha.entity.group</field>
        <field name="arch" type="xml">
            <search string="Entity Group Search">
                <field name="name"/>
                <field name="description"/>
                <field name="ha_instance_id"/>
                <filter name="active" string="Active" domain="[('active', '=', True)]"/>
                <separator/>
                <filter name="current_instance" string="Current Instance"
                        domain="[('is_current_user_instance', '=', True)]"/>
                <group expand="0" string="Group By">
                    <filter name="group_by_instance" string="HA Instance" context="{'group_by': 'ha_instance_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!-- Entity Group Action -->
    <record id="ha_entity_group_action" model="ir.actions.act_window">
        <field name="name">Entity Groups</field>
        <field name="res_model">ha.entity.group</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create your first Entity Group
            </p>
            <p>
                Group your Home Assistant entities for better organization and management.
            </p>
        </field>
    </record>

    <!-- Entity Group - View Entities Action -->
    <record id="ha_entity_group_view_entities_action" model="ir.actions.act_window">
        <field name="name">Group Entities</field>
        <field name="res_model">ha.entity</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <!-- Entity Group - View Tags Action -->
    <record id="ha_entity_group_view_tags_action" model="ir.actions.act_window">
        <field name="name">Group Tags</field>
        <field name="res_model">ha.entity.group.tag</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
</odoo>
