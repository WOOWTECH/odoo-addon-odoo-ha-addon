<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Portal Live Status Template -->
    <t t-name="odoo_ha_addon.PortalLiveStatus">
        <div class="portal-live-status">
            <div
                class="display-4 mb-2 portal-transition-colors"
                t-att-class="{'portal-state-changed portal-state-pulse': state.stateChanged}"
            >
                <t t-esc="state.entityState"/>
            </div>
            <small class="text-muted">
                <i class="fa fa-refresh portal-spin me-1"/>
                Auto-updates every 5 seconds
            </small>
        </div>
    </t>
</templates>
