<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <!-- Script Domain Controller -->
    <t t-name="odoo_ha_addon.EntityController.Script">
        <div class="script-controller">
            <button class="btn btn-success" t-on-click.stop="() => this.onRun()" t-att-disabled="state.isLoading">
                <i t-if="state.isLoading" class="fa fa-spinner entity-spin me-1"/>
                <i t-else="" class="fa fa-play me-1"/>
                Run
            </button>
        </div>
    </t>
</templates>
