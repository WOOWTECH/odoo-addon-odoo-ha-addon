<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="odoo_ha_addon.EntityDemo">
        <div class="entity-demo-widget">
            <!-- Entity Info Header -->
            <div class="entity-info mb-2">
                <h6 class="mb-1">
                    <t t-esc="entityData.name || entityData.entity_id"/>
                </h6>
                <div class="text-muted small">
                    <code><t t-esc="entityData.entity_id"/></code>
                </div>
            </div>

            <!-- Use Shared EntityController -->
            <EntityController entity="entityData"/>

            <!-- Debug Info (Optional - can be removed) -->
            <details class="mt-2">
                <summary class="text-muted small" style="cursor: pointer;">
                    <i class="fa fa-info-circle"/> Debug Info
                </summary>
                <div class="mt-2">
                    <t t-foreach="Object.keys(entityData)" t-as="fieldKey" t-key="fieldKey">
                        <p class="small mb-1">
                            <b><t t-esc="fieldKey"/></b>:
                            <span t-esc="entityData[fieldKey]"/>
                        </p>
                    </t>
                </div>
            </details>
        </div>
    </t>
</templates>